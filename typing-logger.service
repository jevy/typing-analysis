[Unit]
Description=Typing Analysis Keystroke Logger
After=graphical-session.target
PartOf=graphical-session.target

[Service]
Type=simple
ExecStart=%h/.nix-profile/bin/typing-log
Restart=on-failure
RestartSec=10

# Security hardening
NoNewPrivileges=true
PrivateTmp=true

[Install]
WantedBy=graphical-session.target
